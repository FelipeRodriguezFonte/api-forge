{
  "name": "api-forge",
  "version": "0.1.0",
  "description": "Desktop HTTP client without admin installs",
  "main": "app/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack:mac": "electron-builder --mac --dir",
    "pack:win": "electron-builder --win --dir"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.apiforge.app",
    "productName": "API Forge",
    "files": [
      "app/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "zip",
        "portable"
      ]
    }
  }
}
